@model FilmPortal.Core.Entities.Movie

<h1>Yeni Film Ekle</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Title">Film Adı</label>
        <input type="text" id="Title" name="Title" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Description">Açıklama</label>
        <textarea id="Description" name="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label for="Rating">Puan</label>
        <input type="number" id="Rating" name="Rating" class="form-control" min="0" max="10" step="0.1" required />
    </div>
    <div class="form-group">
        <label for="ReleaseDate">Yayın Tarihi</label>
        <input type="date" id="ReleaseDate" name="ReleaseDate" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
